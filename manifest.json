{
	"manifest_version": 2,
	"name": "HoverComment",
	"version": "1.0",
	"description": "Displays comments on a reddit thread upon hovering over the comments",
	"permissions": [
		"tabs",
		"http://www.reddit.com/",
		"https://www.reddit.com/",
		"https://api.reddit.com/",
		"activeTab",
		"https://ajax.googleapis.com/"

	],
	"web_accessible_resources": [
		"/plusIcon.png",
		"/minusIcon.png",
		"/plusIconLight.png",
		"/minusIconLight.png"
	],
	"background":{
		"scripts": ["background.js"],
		"persistent": false
	},
	"browser_action":{
    	"default_icon": "settingsIcon.png",
    	"default_popup": "settings.html"
    }
}