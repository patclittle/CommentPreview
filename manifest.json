{
	"manifest_version": 2,
	"name": "HoverComment",
	"version": "1.0",
	"description": "Displays comments on a reddit thread upon hovering over the comments",
	"permissions": [
		"tabs",
		"http://www.reddit.com/",
		"https://www.reddit.com/",
		"https://api.reddit.com/"
	],
	"background":{
		"scripts": ["background.js"],
		"persistent": false
	}
}